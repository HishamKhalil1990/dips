<div class="container py-5">
    <div class="row py-5">
      <div class="col-lg-10 mx-auto">
        <div class="card rounded shadow border-0">
          <div class="card-body p-5 bg-white rounded">
            <div class="table-responsive">
              <table id="example" style="width:100%" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th style="display: none;">Item Name</th>
                    <th>Item Code</th>
                    <th>Item Name</th>
                    <th>P.O Number</th>
                    <th>Barcode</th>
                    <th>Qty</th>
                    <th>Unit</th>
                  </tr>
                </thead>
                <tbody id="tbody">
                  <% for(let i = 0; i < results.length; i++){ const item = results[i] %>
                    <% if(item.Order > 0) { %>
                      <tr 
                          class="trEfects active-input" 
                          id="tr-<%= item.id %>"
                          style="background-color:green"
                        >
                    <% } else { %>
                      <tr class="trEfects hide" id="tr-<%= item.id %>">
                    <% } %>
                        <td style="display: none;"><%= item.ItemName %></td>
                        <td id="td1-<%= item.id %>"><%= item.ItemCode %></td>
                        <td id="td2-<%= item.id %>"><%= item.ItemName %></td>
                        <% if(item.DocNum > 0) { %>
                          <td id="tdinp-<%= item.id %>" style="display: flex;justify-content: center;"><input id="inputDUC-<%= item.id %>" type="number" style="width: 100px;" value="<%= item.DocNum %>"/></td>
                        <% } else { %>
                          <td id="tdinp-<%= item.id %>" style="display: flex;justify-content: center;"><input id="inputDUC-<%= item.id %>" type="number" style="width: 100px;"/></td>
                          <% } %>
                        <td id="td3-<%= item.id %>"><%= item.CodeBars %></td>
                        <% if(item.Order > 0) { %>
                          <td id="td-<%= item.id %>" style="display: flex;justify-content: center;"><input id="input-<%= item.id %>" type="number" style="width: 100px;" step="0.0" value="<%= item.Order %>"/></td>
                        <% } else { %>
                          <td id="td-<%= item.id %>" style="display: flex;justify-content: center;"><input id="input-<%= item.id %>" type="number" style="width: 100px;" step="0.0"/></td>
                        <% } %>
                        <td id="td7-<%= item.id %>"><%= item.BuyUnitMsr %></td>
                      </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>