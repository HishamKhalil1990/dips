<div class="container py-5">
    <div class="row py-5">
      <div class="col-lg-10 mx-auto">
        <div class="card rounded shadow border-0">
          <div class="card-body p-5 bg-white rounded">
            <div class="table-responsive">
              <table id="example" style="width:100%" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Item Code</th>
                    <th>Item Name</th>
                    <th>Barcode</th>
                    <% if(info.page == "receipt"){ %>
                      <th>Receipt</th>
                      <th>Ordered</th>
                      <th>Remain</th>
                    <% } else { %>
                      <th>Deliver</th>
                      <th>Ordered</th>
                    <% } %>
                    <th>Unit</th>
                  </tr>
                </thead>
                <% if(info.results) { %>
                <tbody id="tbody">
                  <% for(let i=0; i < info.results.length; i++){ const item = info.results[i] %>
                    <% if(item.Order > 0) { %>
                    <tr 
                        class="trEfects active-input" 
                        id="tr-<%= item.id %>"
                        style="background-color:green"
                      >
                    <% } else { %>
                      <tr class="trEfects hide" id="tr-<%= item.id %>">
                    <% } %>
                      <td id="td-<%= item.id %>"><%= item.ItemCode %></td>
                      <td id="td-<%= item.id %>"><%= item.ItemName %></td>
                      <td id="td-<%= item.id %>"><%= item.CodeBars %></td>
                      <% if(item.Order > 0) { %>
                        <td id="td-<%= item.id %>" style="display: flex;justify-content: center;"><input id="input-<%= item.id %>" type="number" style="width: 100px;" step="0.0" value="<%= item.Order %>"/></td>
                      <% } else { %>
                        <td id="td-<%= item.id %>" style="display: flex;justify-content: center;"><input id="input-<%= item.id %>" type="number" style="width: 100px;" step="0.0"/></td>
                      <% } %>
                      <td id="qty-<%= item.id %>"><%= item.OrderRequest %></td>
                      <% if(info.page == "receipt"){ %>
                        <td id="diff-<%= item.id %>"><%= item.Difference %></td>
                      <% } %>
                      <td id="uom-<%= item.id %>"><%= item.BuyUnitMsr %></td>
                    </tr>
                  <% }; %>
                </tbody>
                <% } %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>